<div class="main reservations-index">
  <div class="container">
    <div class="top-wrapper">
      <h2>予約一覧</h2>
    </div>
    <div class="reservations-index-item">
      <table>
        <thead>
          <tr>
            <th>画像</th>
            <th>施設名</th>
            <th>紹介文</th>
            <th>合計料金</th>
            <th>チェックイン</th>
            <th>チェックアウト</th>
            <th>予定確定日時</th>
            <th>詳細</th>
            <th>編集</th>
            <th>削除</th>
          </tr>
        </thead>
        <tbody>
          <% @reservations.each do |reservation| %>
            <tr>
              <td>
                <% if reservation.room.image? %>
                  <%= image_tag reservation.room.image.url %>
                <% else %>
                  <%= image_tag '/assets/default_room.jpg' %>
                <% end %>
              </td>
              <td><%= reservation.room.name %></td>
              <td><%= reservation.room.detail %></td>
              <td><%= reservation.room.charge * reservation.number_of_people * (reservation.check_out_date + 1.day - reservation.check_in_date ).to_i %></td>
              <td><%= reservation.check_in_date.strftime("%Y/%m/%d") %></td>
              <td><%= reservation.check_out_date.strftime("%Y/%m/%d") %></td>
              <td><%= reservation.created_at.strftime("%Y/%m/%d %-H:%M")  %></td>
              <td><%= link_to "詳細", users_reservation_show_path(user_id: @current_user.id, id: reservation.id) %></td>
              <td><%= link_to "編集", users_reservation_edit_path(user_id: @current_user.id, id: reservation.id) %></td>
              <td><%= link_to "削除", users_reservation_destroy_path(user_id: @current_user.id, id: reservation.id), {method: :delete, data: {confirm: "予約を削除しますか？"}} %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
