<div class="main users-edit">
  <div class="container">
    <div class="top-wrapper">
      <h2>アカウント情報の編集</h2>
    </div>
    <div class="form users-form">
      <div class="form-heading">
        <%= render 'layouts/error_messages', object: @user %>
      </div>
      <div class="form-body">
        <%= form_with model: @user, url: users_update_profile_path(@user), method: :patch do |user| %>
          <table>
            <tr>
              <th><%= user.label :image,"画像" %></th>
              <td><%= user.file_field :image %></td>
            </tr>
            <tr>
              <th><%= user.label :name,"ユーザー名" %></th>
              <td><%= user.text_field :name, placeholder: "ユーザー名を入力" %></td>
            </tr>
            <tr>
              <th><%= user.label :profile,"自己紹介" %></th>
              <td><%= user.text_area :profile, placeholder: "自己紹介を入力" %></td>
            </tr>
          </table>
          <div class="form-btns">
            <%= link_to "キャンセル", user_path(@user), class: "btn cancel" %>
            <p>
              <%= user.submit "保存", class:"btn commit" %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
