<div class="main rooms-index">
  <div class="container">
    <div class="top-wrapper">
      <h2>登録施設一覧</h2>
    </div>
    <div class="rooms-index-item">
      <table>
        <thead>
          <tr>
            <th>画像</th>
            <th>施設名・詳細</th>
            <th>紹介文</th>
            <th>料金</th>
            <th>作成日</th>
            <th>編集</th>
            <th>削除</th>
          </tr>
        </thead>
        <tbody>
          <% @rooms.each do |room| %>
            <tr>
              <td><%= image_tag room.image.url %></td>
              <td><%= link_to room.name, room_path(room) %></td>
              <td><%= room.detail %></td>
              <td><%= room.charge.to_s(:delimited) %></td>
              <td><%= room.created_at.strftime("%Y/%m/%d") %></td>
              <td><%= link_to "編集", edit_room_path(room) %></td>
              <td><%= link_to "削除", room, {method: :delete, data: {confirm: "施設を削除しますか？"}} %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
